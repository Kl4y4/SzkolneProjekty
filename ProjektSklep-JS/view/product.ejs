<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title> DeckShop </title>
    <link rel="stylesheet" type="text/css" href="stylesheets/style_info.css">
    <link rel="stylesheet" type="text/css" href="stylesheets/header.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kdam+Thmor+Pro&family=Lato:wght@300&display=swap" rel="stylesheet">

</head>
<body>
    <header>
        <div id="hamburger">
            <input id="menu__toggle" type="checkbox" />
            <label class="menu__btn" for="menu__toggle">
              <span></span>
            </label>
        
            <ul class="menu__box">
            
              <li><a class="menu__item" href="http://localhost:3000/">Strona Główna</a></li>
              <li><a class="menu__item" href="http://localhost:3000/about">Podpis</a></li>
            </ul>
          </div>
        <div id="title">DECKSHOP</div>
        <div id="logo"><img src="icon.png" alt="logo"></div>
    </header>

    <div id="container">
    <div class="wrapper">
        <div class="imgContainer">
            <img src="<%= deckInfo.LinkZdjecie %>" alt="<%= deckInfo.Nazwa %>">
            </div>

            <div class="info">
                <h1>Deska Zero </h1>
                <ul>
                    <li> <b> Drewno: </b> <%= deckInfo.Drewno %> </li>
                <li> <b> Marka: </b> <%= deckInfo.Marka  %> </li>
                <li> <b> Szerokość: </b> <%= deckInfo.Szerokosc  %> </li>
                <li> <b> Cena: </b> <%= deckInfo.Cena  %> zł </li>
                <li> <b> Liczb sztuk: </b> <%= deckInfo.LSztuk  %> </li>
                </ul>


            <form action="http://localhost:3000/product/order" method="get">
                <input type="number" name="id" value="<%= deckInfo.Id %>" style="visibility: hidden;" /> <br />
                <button type="submit"> Zamów </button>
            </form>


        </div>
       
        
        
    </div>
</div>
</div>


</body>
</html>